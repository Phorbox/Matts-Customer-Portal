@page
@using backend.Models.Piece
@using backend.Models.Workorder
@using backend.Models.Clientele
@using backend.Models.Job
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    List<Workorder> workorderList = (List<Workorder>)ViewData["WorkorderList"];
    List<Piece> pieceList = (List<Piece>)ViewData["PieceList"];
    List<Clientele> clienteleList = (List<Clientele>)ViewData["ClienteleList"];
    List<Job> jobList = (List<Job>)ViewData["JobList"];

}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Workorders</h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Workorder ID</th>
                        <th>Job ID</th>
                        <th>Client ID</th>
                        <th>Input ID</th>
                        <th>Status</th>
                        <th>Date Approved</th>
                        <th>Due Date</th>
                        <th>Date Created</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var workorder in workorderList)
                    {
                        <tr>
                            <td>@workorder.Workorderid</td>
                            <td>@workorder.Jobid</td>
                            <td>@workorder.Clientid</td>
                            <td>@workorder.Inputid</td>
                            <td>@workorder.Status</td>
                            <td>@workorder.DateApproved</td>
                            <td>@workorder.DueDate</td>
                            <td>@workorder.DateCreated</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-12">
            <h1 class="text-center">Piece</h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Piece ID</th>
                        <th>Workorder ID</th>
                        <th>Client ID</th>
                        <th>Status</th>
                        <th>Batch Name</th>
                        <th>Pages</th>
                        <th>Simplex</th>
                        <th>Sequence</th>
                        <th>Retention Start Day</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var piece in pieceList)
                    {
                        <tr>
                            <td>@piece.Pieceid</td>
                            <td>@piece.Workorderid</td>
                            <td>@piece.Clientid</td>
                            <td>@piece.Status</td>
                            <td>@piece.BatchName</td>
                            <td>@piece.Pages</td>
                            <td>@piece.Simplex</td>
                            <td>@piece.Sequence</td>
                            <td>@piece.RetentionStartDay</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-12">
            <h1 class="text-center">Clientele</h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Clientid</th>
                        <th>Name</th>
                        <th>RetentionLength</th>
                        <th>Sladuedate</th>
                        <th>Parentid</th>
                        <th>childids</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var clientele in clienteleList)
                    {
                        <tr>
                            <td>@clientele.Clientid</td>
                            <td>@clientele.Name</td>
                            <td>@clientele.RetentionLength</td>
                            <td>@clientele.Sladuedate</td>
                            <td>@clientele.Parentid</td>
                            @foreach (var child in clientele.Childids)
                            {
                                <td>@child</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-12">
            <h1 class="text-center">Job</h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Job ID</th>
                        <th>Job Name</th>
                        <th>Client ID</th>
                        <th>SLA Overide</th>
                        <th>Approval</th>
                        <th>CustomPostage</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in jobList)
                    {
                        <tr>
                            <td>@job.Jobid</td>
                            <td>@job.Name</td>
                            <td>@job.Clientid</td>
                            <td>@job.SlaOveride</td>
                            <td>@job.Approval</td>
                            <td>@job.CustomPostage</td>
                        </tr>
                    }

            </table>
        </div>
